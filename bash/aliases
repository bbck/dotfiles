# Quick cd to project directory
function c { cd ~/Dropbox/repos/$1; }

# Color aliases
alias ls='ls -G'
alias grep='grep --colour=auto'

# Safe aliases
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# Long listing
alias ll='ls -la'

# IRSSI screen session with reconnect
alias irc="autossh -M 0 -o 'ServerAliveInterval 60' -o 'ServerAliveCountMax 3' -D 1080 -t ec2.bbck.net 'screen -rd'"
