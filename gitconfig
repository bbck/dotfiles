[core]
  editor = vim
  autocrlf = input
  whitespace = trailing-space,cr-at-eol
[color]
  ui = auto
[push]
  default = current
[pull]
  rebase = true
[alias]
  co = checkout
  cp = cherry-pick -x
  st = status --short --branch
  amend = commit --amend -C HEAD
  undo = reset --soft HEAD^
  pp = !git pull && git push
[format]
  pretty = %C(yellow)%h%Creset %s %C(cyan)(%an, %cr)%Creset
[help]
  autocorrect = 10
[commit]
  verbose = true
